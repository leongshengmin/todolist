<%= form_for @task, url: user_task_path(params[:user_id], @task.id) do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title, class: 'form-control' %>

	<%= f.label :completed, class: "checkbox inline" do %>
		<%= f.check_box :completed %>
		<span>Completed Task</span>
	<% end %>
<%= f.submit "Amend", class: "btn btn-primary"%>
<% end %>