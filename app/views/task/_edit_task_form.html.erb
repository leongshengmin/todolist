<%= form_for(@task, '/edit_task/' + params[:tasklist_id].to_s) do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title, class: 'form-control' %>

	<%= f.label :completed, class: "checkbox inline" do %>
		<%= f.check_box :completed %>
		<span>Completed Task</span>
	<% end %>
<%= f.submit "Amend", class: "btn btn-primary", name: "tasklist_id", value: tasklist.id.to_s %>
<% end %>