<%= form_for @task, url: user_task_index_path(params[:user_id]) do |f| %>
<%= hidden_field_tag("tasklist_id", params[:tasklist_id]) %>
	<%= f.label :title %>
	<%= f.text_field :title, class: 'form-control' %>

	<%= f.label :completed, class: "checkbox inline" do %>
		<%= f.check_box :completed %>
		<span>Completed Task</span>
	<% end %>

<%= f.submit "Add", class: "btn btn-primary" %>
<% end %>
